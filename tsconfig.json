{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es2015.promise"],
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "lib"
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "include": [
    "./src/**/*",
    "./node_modules/@types/**/*"
  ]
}
