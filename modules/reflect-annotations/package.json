{
  "name": "reflect-annotations",
  "version": "3.0.0-beta.3",
  "description": "Set and inspect annotation metadata on JavaScript classes and methods",
  "repository": {
    "type": "git",
    "url": "https://github.com/ingress/ingress"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "!**/*.spec.js",
    "lib"
  ],
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "build": "rm -rf lib && npm run lint && tsc",
    "lint": "eslint \"src/**/*\" --fix --ext \"*.ts\"",
    "prepare": "npm run build",
    "test": "jest",
    "watch": "npm run build && concurrently -k \"npm:watch:typescript\" \"npm:watch:test\" -c blue,green",
    "watch:test": "jest --watchAll",
    "watch:typescript": "tsc -w"
  },
  "keywords": [
    "annotations",
    "decorators",
    "class decorators",
    "class annotations",
    "annotation",
    "decorator",
    "class reflection",
    "reflection"
  ],
  "author": "Caleb Boyd <caleb.boyd@hotmail.com> (https://github.com/calebboyd)",
  "license": "MIT",
  "peerDependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "typescript": "^3.9.3"
  },
  "jest": {
    "testRegex": ".*?(\\.spec).js",
    "watchPathIgnorePatterns": [
      "\\.ts$"
    ]
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "*.d.ts"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.ts"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "@typescript-eslint/no-empty-function": 0,
          "@typescript-eslint/no-unused-vars": 0
        }
      }
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-use-before-define": 0
    }
  }
}
