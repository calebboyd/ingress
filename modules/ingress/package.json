{
  "name": "ingress",
  "version": "4.0.0-alpha.0",
  "description": "Composable nodejs applications",
  "main": "lib/ingress.js",
  "files": [
    "lib",
    "!**/*.spec.js"
  ],
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" --fix",
    "prepublish": "npm run build",
    "build": "rm -rf lib && npm run lint && tsc",
    "watch:typescript": "tsc -w",
    "watch:test": "jest --watchAll --detectOpenHandles",
    "watch": "npm run build && concurrently -k \"npm:watch:typescript\" \"npm:watch:test\" -c blue,green",
    "test": "jest --passWithNoTests"
  },
  "repository": {
    "directory": "modules/ingress",
    "type": "git",
    "url": "ssh://git@github.com/ingress/ingress.git"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "jest": {
    "testRegex": ".*?(\\.spec).js",
    "watchPathIgnorePatterns": [
      "\\.ts$"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [],
    "overrides": [
      {
        "files": [
          "*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "one-var": [
        "error",
        "consecutive"
      ]
    }
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "server",
    "http",
    "application",
    "framework",
    "composable",
    "declarative",
    "middleware"
  ],
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "dependencies": {
    "@hapi/subtext": "~7.0.3",
    "@ingress/di": "^2.0.0-alpha.0",
    "@ingress/http-status": "^2.0.0-alpha.0",
    "app-builder": "^6.2.2",
    "destroy": "~1.0.4",
    "on-finished": "~2.3.0",
    "reflect-annotations": "^3.0.0-alpha.0",
    "route-recognizer": "0.3.4",
    "rxjs": "~6.5.5",
    "uuid": "^8.0.0",
    "websocket": "~1.0.31"
  },
  "devDependencies": {
    "@types/destroy": "~1.0.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@types/on-finished": "~2.3.1",
    "@types/route-recognizer": "0.3.0",
    "@types/sinon": "^9.0.0",
    "@types/uuid": "^7.0.3",
    "@types/websocket": "~1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "concurrently": "^5.2.0",
    "cross-fetch": "~3.0.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-watch": "^6.0.1",
    "get-port": "~5.1.1",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "sinon": "^9.0.2",
    "typescript": "^3.8.3"
  }
}
