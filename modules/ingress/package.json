{
  "name": "ingress",
  "version": "4.0.2",
  "description": "Composable nodejs applications",
  "main": "lib/main.js",
  "files": [
    "lib",
    "!**/*.spec.js",
    "!**/*.spec.d.ts"
  ],
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" --fix",
    "prepare": "npm run build",
    "build": "rm -rf lib && npm run lint && tsc",
    "watch:typescript": "tsc -w",
    "watch:test": "jest --watchAll --detectOpenHandles",
    "watch": "npm run build && concurrently -k \"npm:watch:typescript\" \"npm:watch:test\" -c blue,green",
    "test": "jest"
  },
  "repository": {
    "directory": "modules/ingress",
    "type": "git",
    "url": "ssh://git@github.com/ingress/ingress.git"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "jest": {
    "testRegex": ".*?\\.spec\\.ts",
    "testPathIgnorePatterns": [
      ".*?\\.util\\.spec\\.ts$"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "babel-plugin-transform-typescript-metadata",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [],
    "overrides": [
      {
        "files": [
          "*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "no-warning-comments": 1,
      "one-var": [
        "error",
        "consecutive"
      ]
    }
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "server",
    "http",
    "application",
    "framework",
    "composable",
    "declarative",
    "middleware"
  ],
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "dependencies": {
    "@hapi/subtext": "~7.0.3",
    "@ingress/di": "^2.0.0",
    "@ingress/http-status": "^2.0.0",
    "app-builder": "^6.2.2",
    "destroy": "~1.0.4",
    "on-finished": "~2.3.0",
    "reflect-annotations": "^3.0.0",
    "route-recognizer": "0.3.4",
    "rxjs": "~6.6.3",
    "uuid": "^8.3.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/destroy": "~1.0.0",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@types/on-finished": "~2.3.1",
    "@types/route-recognizer": "0.3.0",
    "@types/sinon": "^9.0.5",
    "@types/uuid": "^8.3.0",
    "@types/websocket": "~1.0.1",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "concurrently": "^5.3.0",
    "cross-fetch": "~3.0.6",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-watch": "^7.0.0",
    "get-port": "~5.1.1",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "reflect-metadata": "^0.1.13",
    "sinon": "^9.0.3",
    "typescript": "^4.0.2"
  },
  "gitHead": "cadec1351b12db9aca612ba584b8267c76834683"
}
